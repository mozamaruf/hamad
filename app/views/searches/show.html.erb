<h1> Search Result </h1>

<p> <%= link_to 'Back', new_search_path %></p>

<% if @search.search_stuffs.empty? %>

	<p> No Records Found </p>

<% else %>
	<% @search.search_stuffs.each do |c| %>
	<br>

	<div class ="div">
		<h3><%= c.name %></h3>
		<p><%= image_tag c.image.url(:thumb) %></p>
		<p>Price: Qr.<%= c.price %></p>
		<p>Location: <%= c.location %></p>
		<p>Description: <%= c.description %></p>
		<p><%= link_to 'Details', c %></p>
	</div>

	<% end %>

<% end %>

