<p id="notice"><%= notice %></p>

<h1>Devices</h1>
<%= link_to 'Add New Devices', new_stuff_path %>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Location</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stuffs.each do |stuff| %>
      <tr>
        <td><%= stuff.name %></td>
        <td><%= stuff.price %></td>
        <td><%= stuff.location %></td>
        <td><%= stuff.description %></td>
        <td><%= image_tag stuff.image.url(:thumb) %></td>
        <td><%= link_to 'Show', stuff %></td>
        <td><%= link_to 'Edit', edit_stuff_path(stuff) %></td>
        <td><%= link_to 'Destroy', stuff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
