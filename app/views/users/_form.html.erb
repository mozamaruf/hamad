<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :password %>
    <label>Role</label>
    <%= f.select :role, ['Doctor', 'Vendor','Management']%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
